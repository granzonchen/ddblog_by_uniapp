<view><block a:if="{{post!=null}}"><view data-event-opts="{{[['tap',[['toDetails',['$0'],['post.id']]]]]}}" class="cu-card article" onTap="__e"><view class="cu-item shadow"><view class="title"><view class="text-cut">{{post.title}}</view></view><view class="content"><block a:if="{{post.cover}}"><image src="{{post.cover}}" mode="aspectFill"></image></block><view class="desc"><view class="text-content">{{post.content}}</view><view><block a:for="{{post.tags}}" a:for-item="tag" a:for-index="tagIndex" a:key="tagIndex"><view class="cu-tag bg-red light sm round">{{tag.name}}</view></block></view></view></view></view></view></block></view>